<idea-plugin>
    <id>com.damiennichols.omniremote.studio</id>
    <name>Omni Remote</name>
    <version>4.8.0</version>
    <vendor email="me@damiennichols.com">Damien Nichols</vendor>
    <description><![CDATA[
    Omni Remote tool window for connecting to the local Omni Remote Agent.
    ]]></description>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Omni Remote" anchor="right" factoryClass="com.damiennichols.omniremote.OmniRemoteToolWindowFactory" />
    </extensions>
</idea-plugin>
